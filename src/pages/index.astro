---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
				background-color: #f5f5f5;
				color: #333;
				line-height: 1.6;
				margin: 0;
				padding: 0;
			}
			.name-header {
				color: #4545E2;
				padding: 1rem;
				font-size: 1.5rem;
				font-weight: bold;
			}
			.container {
				display: flex;
				flex-direction: column;
				max-width: 1000px;
				margin: 0 auto;
				padding: 1rem;
			}
			.sidebar {
				width: 100%;
				margin-bottom: 2rem;
				order: 2;
			}
			.main-content {
				width: 100%;
				order: 1;
			}
			h1 {
				font-size: 2.5rem;
				margin: 0 0 1rem 0;
				line-height: 1.2;
			}
			h2 {
				font-size: 1.2rem;
				margin: 1.5rem 0 1rem 0;
				font-weight: bold;
				border-bottom: 1px solid #ccc;
				padding-bottom: 0.5rem;
			}
			ul {
				list-style-type: none;
				padding: 0;
				margin: 0;
			}
			li {
				margin-bottom: 0.5rem;
			}
			a {
				color: #4545E2;
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}
			p {
				margin: 0 0 1rem 0;
			}
			@media (min-width: 768px) {
				.container {
					flex-direction: row;
					padding: 2rem 1rem;
				}
				.sidebar {
					width: 250px;
					margin-right: 4rem;
					margin-bottom: 0;
					order: 1;
				}
				.main-content {
					flex: 1;
					order: 2;
				}
				h1 {
					font-size: 4rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="name-header">
			Abhinav Mukherjee
		</div>
		<main class="container">
			<div class="main-content">
				<h1>Hi!</h1>
				<p>I'm a curious person. By profession, I'm a Product Manager.</p>
				<p>I build consumer products inside of startups.</p>
				<p>I spend a lot of time evangelizing startups, businesses and the power of building tech.</p>
				<p><a href="#now">Now</a>: What I'm currently upto</p>
			</div>
			<aside class="sidebar">
				<section>
					<h2>Overview</h2>
					<ul>
						<li><a href="#about">About</a></li>
						<li><a href="#now">Now</a></li>
						<li><a href="/blog">Blog</a></li>
						<li><a href="#book-notes">Book Notes</a></li>
						<li><a href="mailto:your-email@example.com">Email</a></li>
						<li><a href="https://twitter.com/your-twitter-handle" target="_blank">Twitter</a></li>
					</ul>
				</section>
				<section>
					<h2>My Favorite Posts</h2>
					<ul>
						<li><a href="#high-risk">High Risk, High Reward</a></li>
						<li><a href="#delayed-gratification">Delayed Gratification</a></li>
						<li><a href="/blog">[All Writing]</a></li>
					</ul>
				</section>
				<section>
					<h2>Curation</h2>
					<ul>
						<li><a href="#pocket-saves">Pocket Saves</a></li>
						<li><a href="#raindrop-saves">Raindrop Saves</a></li>
					</ul>
				</section>
			</aside>
		</main>
	</body>
</html>